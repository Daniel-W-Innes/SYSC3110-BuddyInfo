    </path>

    <property name="project.jdk.home" value="${jdk.home.13}"/>
    <property name="project.jdk.bin" value="${jdk.bin.13}"/>
    <property name="project.jdk.classpath" value="jdk.classpath.13"/>


    <!-- Project Libraries -->

    <path id="library.com.google.guava:guava:28.1-jre.classpath">
        <pathelement
                location="${path.variable.maven_repository}/com/google/code/findbugs/jsr305/3.0.2/jsr305-3.0.2.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/com/google/errorprone/error_prone_annotations/2.3.2/error_prone_annotations-2.3.2.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/com/google/guava/failureaccess/1.0.1/failureaccess-1.0.1.jar"/>
        <pathelement location="${path.variable.maven_repository}/com/google/guava/guava/28.1-jre/guava-28.1-jre.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/com/google/guava/listenablefuture/9999.0-empty-to-avoid-conflict-with-guava/listenablefuture-9999.0-empty-to-avoid-conflict-with-guava.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/com/google/j2objc/j2objc-annotations/1.3/j2objc-annotations-1.3.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/org/checkerframework/checker-qual/2.8.1/checker-qual-2.8.1.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/org/codehaus/mojo/animal-sniffer-annotations/1.18/animal-sniffer-annotations-1.18.jar"/>
    </path>

    <path id="library.com.google.protobuf:protobuf-java:3.11.0.classpath">
        <pathelement
                location="${path.variable.maven_repository}/com/google/protobuf/protobuf-java/3.11.0/protobuf-java-3.11.0.jar"/>
    </path>

    <path id="library.org.junit.jupiter:junit-jupiter-api:5.6.0-m1.classpath">
        <pathelement
                location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.1.0/apiguardian-api-1.1.0.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.6.0-M1/junit-jupiter-api-5.6.0-M1.jar"/>
        <pathelement
                location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.6.0-M1/junit-platform-commons-1.6.0-M1.jar"/>
        <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.2.0/opentest4j-1.2.0.jar"/>
    </path>


    <!-- Global Libraries -->

    <path id="library.bundled_protobuf_distribution.classpath"/>
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2.home" value="${idea.home}/lib"/>
    <path id="javac2.classpath">
        <fileset dir="${javac2.home}">
            <include name="javac2.jar"/>
            <include name="jdom.jar"/>
            <include name="asm-all*.jar"/>
            <include name="forms-*.jar"/>
        </fileset>
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
        <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions"
                 classpathref="javac2.classpath"/>
    </target>

    <!-- Modules -->


    <!-- Module SYSC3110-BuddyInfo -->

    <dirname property="module.sysc3110-buddyinfo.basedir" file="${ant.file}"/>


    <property name="module.jdk.home.sysc3110-buddyinfo" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.sysc3110-buddyinfo" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.sysc3110-buddyinfo" value="${project.jdk.classpath}"/>

    <property name="compiler.args.sysc3110-buddyinfo" value="-encoding UTF-8 -source 13 -target 13 ${compiler.args}"/>

    <property name="sysc3110-buddyinfo.output.dir"
              value="${module.sysc3110-buddyinfo.basedir}/out/production/SYSC3110-BuddyInfo"/>
    <property name="sysc3110-buddyinfo.testoutput.dir"
              value="${module.sysc3110-buddyinfo.basedir}/out/test/SYSC3110-BuddyInfo"/>

    <path id="sysc3110-buddyinfo.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="sysc3110-buddyinfo.module.production.classpath">
        <path refid="${module.jdk.classpath.sysc3110-buddyinfo}"/>
        <path refid="library.bundled_protobuf_distribution.classpath"/>
        <path refid="library.com.google.guava:guava:28.1-jre.classpath"/>
        <path refid="library.com.google.protobuf:protobuf-java:3.11.0.classpath"/>
        <path refid="library.org.junit.jupiter:junit-jupiter-api:5.6.0-m1.classpath"/>
    </path>

    <path id="sysc3110-buddyinfo.runtime.production.module.classpath">
        <pathelement location="${sysc3110-buddyinfo.output.dir}"/>
        <path refid="library.bundled_protobuf_distribution.classpath"/>
        <path refid="library.com.google.guava:guava:28.1-jre.classpath"/>
        <path refid="library.com.google.protobuf:protobuf-java:3.11.0.classpath"/>
        <path refid="library.org.junit.jupiter:junit-jupiter-api:5.6.0-m1.classpath"/>
    </path>

    <path id="sysc3110-buddyinfo.module.classpath">
        <path refid="${module.jdk.classpath.sysc3110-buddyinfo}"/>
        <pathelement location="${sysc3110-buddyinfo.output.dir}"/>
        <path refid="library.bundled_protobuf_distribution.classpath"/>
        <path refid="library.com.google.guava:guava:28.1-jre.classpath"/>
        <path refid="library.com.google.protobuf:protobuf-java:3.11.0.classpath"/>
        <path refid="library.org.junit.jupiter:junit-jupiter-api:5.6.0-m1.classpath"/>
    </path>

    <path id="sysc3110-buddyinfo.runtime.module.classpath">
        <pathelement location="${sysc3110-buddyinfo.testoutput.dir}"/>
        <pathelement location="${sysc3110-buddyinfo.output.dir}"/>
        <path refid="library.bundled_protobuf_distribution.classpath"/>
        <path refid="library.com.google.guava:guava:28.1-jre.classpath"/>
        <path refid="library.com.google.protobuf:protobuf-java:3.11.0.classpath"/>
        <path refid="library.org.junit.jupiter:junit-jupiter-api:5.6.0-m1.classpath"/>
    </path>


    <patternset id="excluded.from.module.sysc3110-buddyinfo">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.sysc3110-buddyinfo">
        <patternset refid="excluded.from.module.sysc3110-buddyinfo"/>
    </patternset>

    <path id="sysc3110-buddyinfo.module.sourcepath">
        <dirset dir="${module.sysc3110-buddyinfo.basedir}">
            <include name="src/main/java"/>
            <include name="src/main/resources"/>
        </dirset>
    </path>

    <path id="sysc3110-buddyinfo.module.test.sourcepath">
        <dirset dir="${module.sysc3110-buddyinfo.basedir}">
            <include name="src/test/java"/>
            <include name="src/test/resources"/>
        </dirset>
    </path>


    <target name="compile.module.sysc3110-buddyinfo"
            depends="compile.module.sysc3110-buddyinfo.production,compile.module.sysc3110-buddyinfo.tests"
            description="Compile module SYSC3110-BuddyInfo"/>

    <target name="compile.module.sysc3110-buddyinfo.production" depends="register.custom.compilers"
            description="Compile module SYSC3110-BuddyInfo; production classes">
        <mkdir dir="${sysc3110-buddyinfo.output.dir}"/>
        <javac2 destdir="${sysc3110-buddyinfo.output.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.sysc3110-buddyinfo}/javac">
            <compilerarg line="${compiler.args.sysc3110-buddyinfo}"/>
            <bootclasspath refid="sysc3110-buddyinfo.module.bootclasspath"/>
            <classpath refid="sysc3110-buddyinfo.module.production.classpath"/>
            <src refid="sysc3110-buddyinfo.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.sysc3110-buddyinfo"/>
        </javac2>

        <copy todir="${sysc3110-buddyinfo.output.dir}">
            <fileset dir="${module.sysc3110-buddyinfo.basedir}/src/main/java">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
            <fileset dir="${module.sysc3110-buddyinfo.basedir}/src/main/resources">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.sysc3110-buddyinfo.tests"
            depends="register.custom.compilers,compile.module.sysc3110-buddyinfo.production"
            description="compile module SYSC3110-BuddyInfo; test classes" unless="skip.tests">
        <mkdir dir="${sysc3110-buddyinfo.testoutput.dir}"/>
        <javac2 destdir="${sysc3110-buddyinfo.testoutput.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.sysc3110-buddyinfo}/javac">
            <compilerarg line="${compiler.args.sysc3110-buddyinfo}"/>
            <bootclasspath refid="sysc3110-buddyinfo.module.bootclasspath"/>
            <classpath refid="sysc3110-buddyinfo.module.classpath"/>
            <src refid="sysc3110-buddyinfo.module.test.sourcepath"/>
            <patternset refid="excluded.from.compilation.sysc3110-buddyinfo"/>
        </javac2>

        <copy todir="${sysc3110-buddyinfo.testoutput.dir}">
            <fileset dir="${module.sysc3110-buddyinfo.basedir}/src/test/java">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
            <fileset dir="${module.sysc3110-buddyinfo.basedir}/src/test/resources">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.sysc3110-buddyinfo" description="cleanup module">
        <delete dir="${sysc3110-buddyinfo.output.dir}"/>
        <delete dir="${sysc3110-buddyinfo.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.sysc3110-buddyinfo" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.sysc3110-buddyinfo"
            description="build all modules"/>

    <target name="all" depends="build.modules" description="build all"/>

    <target name="packaging" depends="all">
        <jar destfile="build/main/${ant.project.name}.jar">
            <fileset dir="src/main/java"/>
            <fileset dir="build/classes/java/main"/>
            <manifest>
                <attribute name="Class-Path" value="java/main"/>
                <attribute name="Main-Class" value="helpers.GUI"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="packaging">
        <java jar="build/main/${ant.project.name}.jar" fork="true"/>
    </target>

    <target name="print message">
        <echo message="Hello from Ant!"/>
    </target>
</project>